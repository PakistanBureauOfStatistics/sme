<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/parent_drawer"
    tools:context="pbs.sme.survey.activity.S3Activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/scrollView"
            style="@style/hr_form_scroll">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/layout_household"/>

                <TextView
                    style="@style/summary_txt_lg"
                    android:layout_width="match_parent"
                    android:text="Section-3: Raw Materials Input  (FY 2023-2024) (Last 3 Months) " />

                <LinearLayout
                    style="@style/smp_container_hr"
                    android:orientation="vertical">
                    <LinearLayout
                        style="@style/smp_container_hr"
                        android:weightSum="10"
                        android:paddingVertical="?pad"
                        android:background="?s_color">
                        <TextView
                            style="@style/summary_eng"
                            android:layout_weight="1.2"
                            android:textColor="@color/white"
                            android:text="Code"
                            android:gravity="center_horizontal"/>
                        <TextView
                            style="@style/summary_eng"
                            android:layout_weight="6.8"
                            android:text="Description"
                            android:textColor="@color/white"
                            android:gravity="left"/>
                        <TextView
                            style="@style/summary_eng"
                            android:layout_weight="2"
                            android:textColor="@color/white"
                            android:text="Value"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/hliner"
                        android:weightSum="10">
                        <TextView
                            style="@style/summary_eng_c"
                            android:text="301"/>
                        <TextView
                            style="@style/summary_eng"
                            android:text="Payments for raw materials, components, packing materials etc" />
                        <EditText
                            android:id="@+id/value__301"
                            style="@style/edit_table_num"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/hliner"
                        android:weightSum="10">
                        <TextView
                            style="@style/summary_eng_c"
                            android:text="302"/>
                        <TextView
                            style="@style/summary_eng"
                            android:text="Electricity" />
                        <EditText
                            android:id="@+id/value__302"
                            style="@style/edit_table_num"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/hliner"
                        android:weightSum="10">
                        <TextView
                            style="@style/summary_eng_c"
                            android:text="303"/>
                        <TextView
                            style="@style/summary_eng"
                            android:text="Water, gas, other fuels" />
                        <EditText
                            android:id="@+id/value__303"
                            style="@style/edit_table_num"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/hliner"
                        android:weightSum="10">
                        <TextView
                            style="@style/summary_eng_c"
                            android:text="304"/>
                        <TextView
                            style="@style/summary_eng"
                            android:text="Cost for repair and maintenance exclude IT" />
                        <EditText
                            android:id="@+id/value__304"
                            style="@style/edit_table_num"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/hliner"
                        android:weightSum="10">
                        <TextView
                            style="@style/summary_eng_c"
                            android:text="305"/>
                        <TextView
                            style="@style/summary_eng"
                            android:text="Payments for postage, telephone and internet" />
                        <EditText
                            android:id="@+id/value__305"
                            style="@style/edit_table_num"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/hliner"
                        android:weightSum="10">
                        <TextView
                            style="@style/summary_eng_c"
                            android:text="306"/>
                        <TextView
                            style="@style/summary_eng"
                            android:text="Cost of Printing, Stationary and Advertisement" />
                        <EditText
                            android:id="@+id/value__306"
                            style="@style/edit_table_num"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/hliner"
                        android:weightSum="10">
                        <TextView
                            style="@style/summary_eng_c"
                            android:text="307"/>
                        <TextView
                            style="@style/summary_eng"
                            android:text="Travelling and transportation expenses" />
                        <EditText
                            android:id="@+id/value__307"
                            style="@style/edit_table_num"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/hliner"
                        android:weightSum="10">
                        <TextView
                            style="@style/summary_eng_c"
                            android:text="308"/>
                        <TextView
                            style="@style/summary_eng"
                            android:text="Payment for data processing and other services related to information technology" />
                        <EditText
                            android:id="@+id/value__308"
                            style="@style/edit_table_num"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/hliner"
                        android:weightSum="10">
                        <TextView
                            style="@style/summary_eng_c"
                            android:text="309"/>
                        <TextView
                            style="@style/summary_eng"
                            android:text="Payment for repair and maintenance work done by others on computer equipment" />
                        <EditText
                            android:id="@+id/value__309"
                            style="@style/edit_table_num"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/hliner"
                        android:weightSum="10">
                        <TextView
                            style="@style/summary_eng_c"
                            android:text="310"/>
                        <TextView
                            style="@style/summary_eng"
                            android:text="Others (Entertainment Charges, Legal and professional expenses " />
                        <EditText
                            android:id="@+id/value__310"
                            style="@style/edit_table_num"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/hliner"
                        android:weightSum="10">
                        <TextView
                            style="@style/summary_eng_c"
                            android:text="300"/>
                        <TextView
                            style="@style/summary_eng"
                            android:text="Total" />
                        <EditText
                            android:id="@+id/value__300"
                            style="@style/edit_table_num"
                            android:background="@drawable/bg_disabled"
                            android:enabled="false"/>
                    </LinearLayout>

                    <include layout="@layout/layout_form_buttons"/>

                </LinearLayout>
            </LinearLayout>

        </ScrollView>


        <include
            android:id="@+id/footer"
            layout="@layout/footer"/>
    </RelativeLayout>

    <include layout="@layout/layout_nav"/>
</androidx.drawerlayout.widget.DrawerLayout>